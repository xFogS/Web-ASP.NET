@model IEnumerable<Web_GEO.Models.Cars.Tayota.ConfigurationColorModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColorModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigurationModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorModel!.Name)
                    <img src="@item.ColorModel!.URL" width="20" height="20" alt="@item.ColorModel!.URL" style="border-radius:10px; padding-left: 10px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfigurationModel!.Name)
                </td>
                <td>
                    <img src="@item.CarImageUrl" height="200" width="200" alt="@item.CarImageUrl" style="border-radius:10px"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
