@model Web_GEO.Models.Cars.Tayota.ColorModel

<h1>Edit model: @Model.Name</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="RGB" class="control-label"></label>
                <input asp-for="RGB" type="color" />
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" type="text" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p><a asp-action="Index">Back to List</a></p>
